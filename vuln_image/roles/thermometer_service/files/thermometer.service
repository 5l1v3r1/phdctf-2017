[Unit]
Description=Thermometer Service
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStart=/usr/bin/docker-compose -f /home/user/thermometer/docker-compose.yml up
ExecStop=/usr/bin/docker-compose -f /home/user/thermometer/docker-compose.yml down

[Install]
WantedBy=default.target
